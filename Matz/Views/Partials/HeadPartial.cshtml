@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var pageTitle = Model.Value("headerTitle", fallback: Fallback.ToAncestors);
    if (Model.Name != "Startsida")
        pageTitle += " - " + Model.Name;

    var homePage = Model.AncestorOrSelf<Home>();
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@homePage?.MetaDescription" />
    <title>@pageTitle</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />

    <link rel="stylesheet" type="text/css" href="/css/Calender.css" />

    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono" rel="stylesheet">

</head>