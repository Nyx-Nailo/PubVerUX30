@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
	
	var pageTitle = Model.Value("headerTitle", fallback: Fallback.ToAncestors);
	if (Model.Name != "Startsida")
	    pageTitle += " - " + Model.Name;

	var selection = Umbraco.ContentAtRoot().FirstOrDefault()
	.Children()
	.Where(x => x.IsVisible());
	var homePage = Model.AncestorOrSelf<Home>();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle</title>
    <link rel="stylesheet" type="text/css" media="all" href="/css/reset.css" />
    <link rel="stylesheet" type="text/css" media="all" href="/css/style.css" />
</head>

<body>

<header>
    <div class="logo">
        <img src="@homePage.HeaderImage.Url()" />
    </div>
    <nav>
        <div class="nav">
            <a href="/">Startsida</a>
        @foreach (var item in selection)
        {
            <a href="@item.Url()">@item.Name()</a>
        }
        </div>
    </nav>
</header>

<main>
@RenderBody()
</main>

@await Html.PartialAsync("~/Views/Partials/footer.cshtml")

</body>
</html>
